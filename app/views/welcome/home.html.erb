<!-- site landing page-->

<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="/subway_station.jpg" alt="Los Angeles" width="1260" height="500">
      <div class="center jumbotron">
        <h1>Tired of Random Station Closures?</h1>
        <br><br><br>
        <%= link_to "Log in", login_path, class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>

    <div class="item">
      <img src="/subway_car.jpg" alt="Chicago" width="1260" height="500">
      <div class="center jumbotron">
        <h1>Has This Ever Happened To You?</h1>
        <br><br><br>
        <%= link_to "Log in", login_path, class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>

    <div class="item">
      <img src="/img5.jpg" alt="New York" width="1260" height="500">
      <div class="center jumbotron">
        <h1>Sign Up to Vent About The MTA</h1>
        <br><br><br>
        <%= link_to "Log in", login_path, class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
