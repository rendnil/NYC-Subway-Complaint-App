<!--Subway line show page -->

<div class="container">
  <h1><%= "#{@train.line}" %> Train Complaints</h1>
  <br>
  <div class="list-group">
    <div class:"list-group-item">
    <% @train.train_complaints.each do |complaint|  %>
      <div class="media ">
        <div class="media-left">

          <img src=<%= complaint.user.photo  %> class="media-object" height="120" width="120">

        </div>

        <div class="media-body">
          <h3 class="media-heading"><%=link_to(complaint.user.name, user_path(complaint.user))%></h3>
          <h6 class="media-footer"><%= complaint.created_at.strftime("%m/%d/%Y at %l:%M:%S %p") %></h6>
          <div class="panel-group">
            <div class="panel panel-danger">
              <div class="panel-heading">
                <h6 class="panel-title">
                  <h5><a data-toggle="collapse" href="#collapse<%= complaint.id %>"><%="#{complaint.title}" %></a></h5>
                </h6>
              </div>
              <div id= "collapse<%= complaint.id %>" class="panel-collapse collapse">
                <div class="panel-body">Full Complaint:
                  <%= complaint.description %>
                </div>
              </div>
            </div>
          </div>
        </div>


      </div>
      <%end  %>
    </div>
  </div>
</div>
