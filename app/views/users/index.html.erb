<!-- Users index page-->

<div class="container">
  <h1>Users</h1>
  <!--chart dispaling users ordered by number of complaints -->
  <%= column_chart User.most_complaints, ytitle: "Total Complaints", width: "100%" %>
  <div class="list-group">
    <%@users.each do |user|  %>

    <div class:"list-group-item">
      <div class="media">
        <div class="media-left">
          <%if user.photo %>
          <img src=<%= user.photo  %> class="media-object" height="50" width="50">
          <%end %>
      </div>
        <div class="media-body">
          <h3 class="media-heading"><%=link_to(user.name, user_path(user))%>   <span class="badge"> <%= (user.train_complaints.count + user.station_complaints.count) %></span></h3>
          <p>Location:
            <%= user.location %>
          </p>
        </div>
      </div>
    </div>

    <%end  %>
  </div>
</div>
